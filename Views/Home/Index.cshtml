@model IEnumerable<TrabalhoFinalCsharp.Models.ProdutoModel>

@{
    ViewData["Title"] = "Página Inicial";
}

@if (TempData["MensagemLogin"] != null)
{
    <div class="alert alert-success mt-4">
        @TempData["MensagemLogin"]
    </div>
}

@if (TempData["ErroLogin"] != null)
{
    <div class="alert alert-danger mt-4">
        @TempData["ErroLogin"]
    </div>
}

<header class="bg-dark py-5" id="header-home">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder" style="text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.6)">ChristmaShop</h1>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="/img/@item.Slug" alt="Imagem de @item.NomeProduto" />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@item.NomeProduto</h5>
                                R$ @item.ValorUnidade
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Adicionar no
                                    Carrinho</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>
